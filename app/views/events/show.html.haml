.col-md-6.col-md-offset-3
  %br/
  %br/
  .panel.panel-primary
    .panel-heading
      %h3= @event.name
    .panel-body
      .row
        .col-md-12
          .context-row
            %strong= t('.start')
            = l @event.start, format: :long
          .context-row
            %strong= t('.place')
            = @event.place
          .context-row
            %strong= t('.description')
            = @event.description
          .context-row
            %strong= t('.user')
            = @event.user.email
          = link_to t(:back), calendar_path
